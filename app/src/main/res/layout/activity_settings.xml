<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/background2">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout"        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile_image"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"/>

            <EditText
                android:id="@+id/settings_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_profile_image"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:hint="Profile Status"
                android:padding="30dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/settings_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_status"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:hint="Username"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/settings_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_username"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:hint="Full Name"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/settings_faculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_fullname"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:hint="Faculty"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/settings_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_faculty"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:hint="Date of Birth"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/settings_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_dob"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:hint="Gender"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/settings_study_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_gender"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:hint="Study Status"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/settings_update_button"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/settings_study_status"
                android:background="@drawable/button"
                android:text="Update Settings"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>